#!/bin/bash
{{- range .packages.common.nix }}
nix-env -iA {{ . }}
{{- end }}

echo "OS Release: {{ .chezmoi.kernel.osrelease }}"

{{- if (contains .chezmoi.kernel.osrelease "microsoft-standard-WSL2") }}
echo "Detected WSL2 — installing host packages"
{{- range .packages.host.nix }}
nix-env -iA {{ . }}
{{- end }}
{{- else }}
echo "WSL2 not detected — skipping host packages"
{{- end }}
